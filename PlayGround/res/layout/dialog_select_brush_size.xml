<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/brushSizePreview"
        android:layout_width="@dimen/min_brush_size"
        android:layout_height="@dimen/max_brush_size"
        android:layout_margin="@dimen/padding_medium"
        android:contentDescription="@string/brush_size_preview"
        android:scaleType="fitCenter"
        android:src="@drawable/img_circle" />

    <SeekBar
        android:id="@+id/brushSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_small"
        android:max="100" />

</LinearLayout>